<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="4dp"
    app:contentPadding="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="10dp"
    android:paddingEnd="0dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/img_news"
            android:layout_alignBottom="@+id/img_news"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/img_news"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:hint="title"
                android:id="@+id/title_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="desc"
                android:id="@+id/desc_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:id="@+id/img_news"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/rl2"
        android:layout_below="@+id/img_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageButton
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/quantum_ic_more_vert_grey600_18"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/more_btn"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageButton
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/quantum_ic_share_grey600_18"
            android:layout_toLeftOf="@id/more_btn"
            android:id="@+id/share_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            />


        <ImageButton
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/quantum_ic_bookmark_border_grey600_18"
            android:layout_toLeftOf="@id/share_btn"
            android:id="@+id/later_btn"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:src="@color/colorAccent"
            android:id="@+id/fi_news"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_toLeftOf="@id/later_btn"
            android:layout_marginRight="8dp"
            android:textSize="10sp"
            android:layout_alignTop="@id/fi_news"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/fi_news"
            android:hint="xinlangwang"
            android:id="@+id/from_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@id/later_btn"
            android:layout_marginRight="8dp"
            android:textSize="10sp"
            android:layout_alignBottom="@id/fi_news"
            android:layout_marginLeft="8dp"
            android:hint="6tianqian"
            android:layout_toRightOf="@id/fi_news"
            android:layout_below="@id/from_news"
            android:id="@+id/time_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>
    <TextView
        android:layout_marginStart="10dp"
        android:paddingStart="8dp"
        android:hint="ningdenei"
        android:layout_below="@id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
</android.support.v7.widget.CardView>
